<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>NetLib</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

        {% stylesheets 'css/style.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
        {% endstylesheets %}

        {% javascripts 'js/jquery.min.js' 'js/libraries.js' 'js/analytics.js' %}
        <script type="text/javascript" src="{{ asset_url }}" /></script>
        {% endjavascripts %}
    </head>
    <body class="orangenormal">
        {% if erro %}
            <aside id= "alerts" class="alerts-on">
                <p id="mensagemApelido"></p>
                <p id="mensagemEmail"></p>
                <p id="aviso"> {{ form_errors(form.login) }} {{ form_errors(form.senha) }}</p>
                <p id="erros">{{ erro }}</p>		
            </aside>             
        {% endif %}
        <section class='login-box orangedark'>
                {% image 'images/logo2.png' %}
                    <img src="{{ asset_url }}" alt="NetLib">
                {% endimage %}
                <form class= "loginform" method="POST">
                        <section>
                                {{ form_widget(form.login) }}<br />
                        </section>

                        <section>
                                {{ form_widget(form.senha) }}<br />
                        </section>

                        {{ form_widget(form.Entrar) }}

                        <section class="other-links">
                                <a href="{{path('netlib_sobre')}}">O que Ã© o NetLib</a>
                                <a href="{{path('netlib_cadastro')}}">Cadastre-se</a>
                                <a href="{{path('netlib_esquecisenha')}}">Esqueceu sua senha?</a>
                                <a href="{{path('netlib_faq')}}" target="_blank">FAQ</a>
                                <a href="{{path('netlib_termos')}}" target="_blank">Termos de uso</a>
                                <a href="{{path('netlib_contato')}}" target="_blank">Contato</a>
                        </section>
                </form> 
        </section>
    </body>
</html>
