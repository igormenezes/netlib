<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>NetLib</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        {% stylesheets 'css/*' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
        {% endstylesheets %}
        {% javascripts 'js/jquery.min.js' 'js/libraries.js' 'js/jquery.form.min.js' 'js/ajaxPadrao.js' 'js/configAjax.js' 'js/jquery-ui.min.js' 'js/analytics.js' 'js/classes/cadastro.js' %}
        <script type="text/javascript" src="{{ asset_url }}" /></script>
        {% endjavascripts %}{# empty Twig template #}
    <script type="text/javascript" >
        $(document).ready(function() {
            {% if completo %}
                $(function() {
                    $("<div>Enviado com sucesso!</div>").dialog({
                        autoOpen: true,
                        title: 'Mensagem',
                        buttons: {
                            "OK": function() {
                                window.close();
                            }
                        },
                        height: "auto",
                        width: "auto"
                    });
                });
            {% endif %} 

            {% if login == false %}
                location.href = 'http://netlib/';
            {% endif %}

            {% if apelido %}
                $('#denunciar_apelidodenuncia').val('{{apelido}}');
            {% endif %}
                
            {% if email %}
                $('#denunciar_email').val('{{email}}');
            {% endif %}

            {% if login %}
                $('#denunciar_seuapelido').val('{{login}}');
            {% endif%}
        });
    </script>
    <style>
        #denunciar_motivo{height: 200px; width: 500px; text-align: center;}
    </style>
</head>
<body class="orangenormal">
    {% if erro %}
    <aside id= "alerts" class="alerts-on">
        <p id="mensagemApelido"></p>
        <p id="mensagemEmail"></p>
        <p id="aviso"> {{ form_errors(form.seuapelido) }} {{ form_errors(form.erro) }} {{ form_errors(form.apelidodenuncia) }} {{ form_errors(form.motivo) }}</p>
        <p id="erros"></p>		
    </aside>             
    {% endif %}
    <section class='login-big-box orangedark'>
        <h1>Entre em contato</h1>
        <form class= "loginform" method="POST">
            <section>
                    {{ form_widget(form.seuapelido) }}<br />
            </section>

            <section>
                    {{ form_widget(form.email) }}<br />
            </section>

            <section>
                    {{ form_widget(form.apelidodenuncia) }}<br />
            </section>

            <section>
                    {{ form_widget(form.motivo) }}<br />
            </section>
            <br />
            <button class="last"type="submit">Enviar</button>
        </form>
    </section>
</body>
</html>